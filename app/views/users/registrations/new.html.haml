%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :email
    %br/
    = f.email_field :email
  %p
    = f.label :password
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %p
    = f.label "I am a:"
    %br/
		= f.label "Business"
    = f.radio_button :type, :business_user :checked => false
		%br/
		= f.label "School"
    = f.radio_button :type, :school_user :checked => false

  %p= f.submit "Sign up"
= render :partial => "devise/shared/links"
